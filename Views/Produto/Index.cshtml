@model IEnumerable<EverymindChallenge.Models.Produto>//trabalhando com a models

@{
    ViewData["Title"] = "Lista de Produtos"; //Alterando o título da página
}
<main class="">
    <div class="main__table">
        <div class="titulo">
            <h2>Produtos</h2>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Codigo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrecoProduto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.PrecoProduto)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Descricao)
                        </td>
                        <td>
                            <a class="table-links" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                            <a class="table-links" asp-action="Deletar" asp-route-id="@item.Id">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="adicionar">
            <a class="btn-adicionar" asp-action="Novo">Novo</a>
        </div>

    </div>
</main>